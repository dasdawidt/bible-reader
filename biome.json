{
    "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
    "root": true,
    "files": {
        "ignoreUnknown": true,
        "maxSize": null
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "main"
    },
    "linter": {
        "rules": {
            "suspicious": {
                "noAssignInExpressions": "info",
                "noUnknownAtRules": "off"
            }
        }
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "operatorLinebreak": "before",
            "quoteStyle": "single"
        }
    },
    "overrides": [
        {
            "includes": ["**/*.svelte", "**/*.astro", "**/*.vue"],
            "linter": {
                "rules": {
                    "style": {
                        "useConst": "off",
                        "useImportType": "off"
                    },
                    "correctness": {
                        "noUnusedVariables": "off",
                        "noUnusedImports": "off"
                    }
                }
            }
        }
    ]
}
